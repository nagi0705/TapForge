---
import { featureIcons, pricingColors } from "../config/features";
import { loadTranslation, getLocaleFromPathname } from '../utils/i18n';
import type { Language } from '../lib/i18n';
import Youtube from '../layouts/shortcodes/Youtube';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const locale = lang || getLocaleFromPathname(Astro.url.pathname);
const translations = await loadTranslation(locale);
const t = translations.features;

// Create feature array from translations
const features = [
  { id: 'aiScan', ...t.items.aiScan, icon: featureIcons.aiScan },
  { id: 'multilingual', ...t.items.multilingual, icon: featureIcons.multilingual },
  { id: 'noApp', ...t.items.noApp, icon: featureIcons.noApp },
  { id: 'paperless', ...t.items.paperless, icon: featureIcons.paperless },
];

// Create pricing arrays from translations
const betaPricing = [
  { id: 'initial', ...t.pricing.beta.initial, priceColor: pricingColors.beta.initial },
  { id: 'monthly', ...t.pricing.beta.monthly, priceColor: pricingColors.beta.monthly },
  { id: 'additional', ...t.pricing.beta.additional, priceColor: pricingColors.beta.additional },
];

const regularPricing = [
  { id: 'initial', ...t.pricing.regular.initial, priceColor: pricingColors.regular.initial },
  { id: 'monthly', ...t.pricing.regular.monthly, priceColor: pricingColors.regular.monthly },
  { id: 'additional', ...t.pricing.regular.additional, priceColor: pricingColors.regular.additional },
];
---

<section id="features" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <div class="flex items-center justify-center mb-4">
        <img
          src="/images/favicon.png"
          alt="TapForge"
          class="w-12 h-12 rounded-lg mr-3"
        />
        <h2
          class="text-3xl md:text-4xl font-bold text-gray-900"
          id="features-title"
        >
          {t.title}
        </h2>
      </div>
      <p class="text-xl text-gray-600" id="features-subtitle">
        {t.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8" id="features-grid">
      {
        features.map((feature, index) => (
          <div class="text-center p-6 rounded-xl hover:shadow-lg transition-shadow">
            <div
              class={`w-16 h-16 ${feature.icon.bgColor} rounded-full flex items-center justify-center mx-auto mb-4`}
            >
              <svg
                class={`w-8 h-8 ${feature.icon.iconColor}`}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={feature.icon.svgPath}
                />
              </svg>
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 mb-2"
              id={`feature-${index}-title`}
            >
              {feature.title}
            </h3>
            <p
              class="text-gray-600 text-sm"
              id={`feature-${index}-description`}
            >
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>

    <!-- Pricing Information -->
    <div
      class="mt-16 bg-gradient-to-r from-red-50 to-orange-50 rounded-2xl p-8"
    >
      <div class="text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-6" id="pricing-title">
          {t.pricing.title}
        </h3>

        <!-- Pricing -->
        <div class="mb-8">
          <h4 class="text-xl font-bold text-red-600 mb-4">{t.pricing.betaTitle}</h4>
          <div
            class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto"
            id="beta-pricing-grid"
          >
            {
              betaPricing.map((plan, index) => (
                <div class="bg-white rounded-lg p-6 shadow-lg border-2 border-red-200">
                  <h4
                    class="font-semibold text-gray-900 mb-2"
                    id={`early-plan-${index}-title`}
                  >
                    {plan.title}
                  </h4>
                  <div
                    class={`text-2xl font-bold ${plan.priceColor} mb-2`}
                    id={`early-plan-${index}-price`}
                  >
                    {plan.price}
                  </div>
                  <p
                    class="text-sm text-gray-600"
                    id={`early-plan-${index}-description`}
                  >
                    {plan.description}
                  </p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Regular Pricing -->
        <div class="pt-8 border-t border-gray-300">
          <h4 class="text-lg font-bold text-gray-600 mb-4">{t.pricing.regularTitle}</h4>
          <div
            class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto opacity-75"
            id="regular-pricing-grid"
          >
            {
              regularPricing.map((plan, index) => (
                <div class="bg-gray-50 rounded-lg p-6 shadow-sm">
                  <h4
                    class="font-semibold text-gray-700 mb-2 text-sm"
                    id={`regular-plan-${index}-title`}
                  >
                    {plan.title}
                  </h4>
                  <div
                    class={`text-xl font-bold ${plan.priceColor} mb-2`}
                    id={`regular-plan-${index}-price`}
                  >
                    {plan.price}
                  </div>
                  <p
                    class="text-xs text-gray-500"
                    id={`regular-plan-${index}-description`}
                  >
                    {plan.description}
                  </p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Value Proposition -->
        <div class="mt-8 bg-yellow-50 rounded-xl p-4">
          <p class="text-lg font-bold text-yellow-800" id="early-access-benefits-title">
            {translations.benefits?.title || ''}
          </p>
          <div class="flex flex-wrap justify-center gap-4 mt-3 text-sm">
            <span class="text-yellow-700" id="benefit-1">{translations.cta?.features?.noApp || ''}</span>
            <span class="text-yellow-700" id="benefit-2">{translations.cta?.features?.free || ''}</span>
            <span class="text-yellow-700" id="benefit-3">{translations.cta?.features?.multilingual || ''}
          </div>
        </div>
      </div>
    </div>

    <!-- Early Access Counter Script -->
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        // Simulate remaining slots (you can replace this with actual backend data)
        const totalSlots = 100;
        const usedSlots = Math.floor(Math.random() * 30); // Simulate 0-30 slots taken
        const remainingSlots = totalSlots - usedSlots;

        const slotElement = document.getElementById("remaining-slots");
        if (slotElement) {
          slotElement.textContent = remainingSlots.toString();

          // Add urgency styling if slots are running low
          if (remainingSlots < 20) {
            slotElement.parentElement?.classList.add("animate-pulse");
          }
        }
      });
    </script>

    <!-- Demo Video Section -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-8" id="demo-title">
        {t.demo.title}
      </h3>
      <div class="bg-gray-100 rounded-2xl p-8 max-w-3xl mx-auto">
        <div class="rounded-lg overflow-hidden shadow-lg">
          <Youtube 
            client:load
            id="v-Qxbm72nhk"
            title="TapForge AI名刺撮影デモ - NFCデジタル名刺"
          />
        </div>
        <p class="text-sm text-gray-600 mt-4" id="demo-note">
          {t.demo.note}
        </p>
      </div>
    </div>
  </div>
</section>

