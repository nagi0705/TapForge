---
import { loadTranslation, getLocaleFromPathname, createTranslator } from '../utils/i18n';
import type { Language } from '../lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const locale = lang || getLocaleFromPathname(Astro.url.pathname);
const translations = await loadTranslation(locale);
const t = translations.problems;
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2
        class="text-3xl md:text-4xl font-bold text-gray-900 mb-4"
        id="problems-title"
      >
        {t.title}
      </h2>
      <p class="text-xl text-gray-600" id="problems-subtitle">
        {t.subtitle}
      </p>
    </div>

    <div class="max-w-5xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-20 items-start">
        <!-- Problems -->
        <div class="space-y-8">
          <h3
            class="text-2xl font-bold text-gray-900 mb-6 text-center lg:text-left"
            id="problems-section-title"
          >
            {t.problems.title}
          </h3>

          <div class="space-y-6">
            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-red-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-red-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="problem-1-title"
                >
                  {t.problems.cost.title}
                </h4>
                <p class="text-gray-600" id="problem-1-desc">
                  {t.problems.cost.description}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-red-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-red-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="problem-2-title"
                >
                  {t.problems.organization.title}
                </h4>
                <p class="text-gray-600" id="problem-2-desc">
                  {t.problems.organization.description}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-red-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-red-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="problem-3-title"
                >
                  {t.problems.language.title}
                </h4>
                <p class="text-gray-600" id="problem-3-desc">
                  {t.problems.language.description}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-red-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-red-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="problem-4-title"
                >
                  {t.problems.followup.title}
                </h4>
                <p class="text-gray-600" id="problem-4-desc">
                  {t.problems.followup.description}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Solutions -->
        <div class="space-y-8">
          <h3
            class="text-2xl font-bold text-gray-900 mb-6 text-center lg:text-left"
            id="solutions-section-title"
          >
            {t.solutions.title}
          </h3>

          <div class="space-y-6">
            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-green-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="solution-1-title"
                >
                  {t.solutions.cost.title}
                </h4>
                <p class="text-gray-600" id="solution-1-desc">
                  {t.solutions.cost.description}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-green-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="solution-2-title"
                >
                  {t.solutions.time.title}
                </h4>
                <p class="text-gray-600" id="solution-2-desc">
                  {t.solutions.time.description}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-green-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="solution-3-title"
                >
                  {t.solutions.language.title}
                </h4>
                <p class="text-gray-600" id="solution-3-desc">
                  {t.solutions.language.description}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4 max-w-md mx-auto lg:mx-0">
              <div
                class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-green-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id="solution-4-title"
                >
                  {t.solutions.followup.title}
                </h4>
                <p class="text-gray-600" id="solution-4-desc">
                  {t.solutions.followup.description}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Cost Comparison Chart -->
    <div class="mt-16 relative">
      <!-- Background glow -->
      <div
        class="absolute inset-0 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 rounded-3xl blur-2xl opacity-10"
      >
      </div>

      <div
        class="relative bg-white/90 backdrop-blur-sm rounded-3xl shadow-2xl p-10 border border-white/20"
      >
        <div class="text-center mb-12">
          <h3
            class="text-4xl font-black bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent mb-4"
            id="cost-comparison-title"
          >
{translations.costComparison?.title || ''}
          </h3>
          <div
            class="w-32 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mx-auto"
          >
          </div>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
          <!-- Traditional Business Cards -->
          <div class="group">
            <div class="text-center">
              <h4
                class="text-xl font-bold text-gray-700 mb-6"
                id="traditional-cards-title"
              >
{translations.costComparison?.traditional?.title || ''}
              </h4>
              <div
                class="relative bg-gradient-to-br from-red-50 to-red-100 rounded-2xl p-8 border border-red-200/50 shadow-lg group-hover:shadow-xl transition-all duration-300 w-full max-w-[400px] mx-auto h-80 flex flex-col justify-between"
              >
                <div>
                  <div class="text-4xl font-black text-red-600 mb-3">
                    ¥11,000
                  </div>
                  <div
                    class="text-sm text-gray-600 mb-6 font-medium"
                    id="traditional-cards-period"
                  >
                    {translations.costComparison?.traditional?.period || ''}
                  </div>
                </div>
                <div class="space-y-4 text-sm text-gray-600">
                  <div class="flex items-center">
                    <div
                      class="w-10 h-10 bg-white rounded-full border-2 border-red-500 flex items-center justify-center shadow-lg mr-3 flex-shrink-0"
                    >
                      <span class="text-xs font-black text-red-600">¥11K</span>
                    </div>
                    <span id="traditional-printing-cost"
                      >{translations.costComparison?.traditional?.printingCost || ''}</span
                    >
                  </div>
                  <div class="flex items-center">
                    <div
                      class="w-10 h-10 bg-white rounded-full border-2 border-red-500 flex items-center justify-center shadow-lg mr-3 flex-shrink-0"
                    >
                      <span class="text-xs font-black text-red-600">30分</span>
                    </div>
                    <span id="traditional-org-time">{translations.costComparison?.traditional?.orgTime || ''}</span>
                  </div>
                  <div class="flex items-center">
                    <div
                      class="w-10 h-10 bg-white rounded-full border-2 border-red-500 flex items-center justify-center shadow-lg mr-3 flex-shrink-0"
                    >
                      <span class="text-xs font-black text-red-600">高</span>
                    </div>
                    <span id="traditional-env-impact">{translations.costComparison?.traditional?.envImpact || ''}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- TapForge -->
          <div class="group relative">
            <!-- Premium Badge -->
            <div
              class="absolute -top-6 -right-6 w-20 h-20 bg-gradient-to-r from-red-500 to-pink-500 rounded-full flex items-center justify-center shadow-2xl z-10"
            >
              <div
                class="w-16 h-16 bg-white rounded-full flex items-center justify-center"
              >
                <span class="text-2xl font-black text-red-500">!</span>
              </div>
            </div>

            <div class="text-center">
              <h4
                class="text-xl font-bold text-gray-700 mb-6"
                id="tapforge-title"
              >
{translations.costComparison?.tapforge?.title || ''}
              </h4>
              <div
                class="relative bg-gradient-to-br from-green-50 to-emerald-100 rounded-2xl p-8 border-4 border-green-200/50 shadow-xl group-hover:shadow-2xl transition-all duration-300 group-hover:scale-105 w-full max-w-[400px] mx-auto h-80 flex flex-col justify-between"
              >
                <!-- Glow effect -->
                <div
                  class="absolute inset-0 bg-gradient-to-r from-green-400 to-emerald-500 rounded-2xl blur-sm opacity-20"
                >
                </div>

                <div class="relative flex flex-col justify-between h-full">
                  <div>
                    <div
                      class="text-4xl font-black bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent mb-3"
                      id="tapforge-annual-cost"
                    >
                      {translations.costComparison?.tapforge?.period || ''}
                    </div>
                    <div
                      class="text-sm text-gray-600 mb-6 font-medium"
                      id="tapforge-period"
                    >
                      月額500円（早期アクセス）
                    </div>
                  </div>
                  <div class="space-y-4 text-sm text-gray-600">
                    <div class="flex items-center">
                      <div class="relative flex-shrink-0">
                        <div
                          class="absolute inset-0 bg-gradient-to-r from-red-400 to-pink-500 rounded-full blur-sm opacity-75"
                        >
                        </div>
                        <div
                          class="relative w-10 h-10 bg-white rounded-full border-2 border-red-500 flex items-center justify-center shadow-lg"
                        >
                          <span class="text-xs font-black text-red-600">¥500</span
                          >
                        </div>
                      </div>
                      <span
                        class="ml-3 font-bold text-red-600"
                        id="tapforge-monthly-cost">{translations.costComparison?.tapforge?.monthlyCost || ''}</span
                      >
                    </div>
                    <div class="flex items-center">
                      <div class="relative flex-shrink-0">
                        <div
                          class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-500 rounded-full blur-sm opacity-75"
                        >
                        </div>
                        <div
                          class="relative w-10 h-10 bg-white rounded-full border-2 border-orange-500 flex items-center justify-center shadow-lg"
                        >
                          <span class="text-xs font-black text-orange-600"
                            >5分</span
                          >
                        </div>
                      </div>
                      <span
                        class="ml-3 font-bold text-orange-600"
                        id="tapforge-org-time">{translations.costComparison?.tapforge?.orgTime || ''}</span
                      >
                    </div>
                    <div class="flex items-center">
                      <div class="relative flex-shrink-0">
                        <div
                          class="absolute inset-0 bg-gradient-to-r from-green-400 to-emerald-500 rounded-full blur-sm opacity-75"
                        >
                        </div>
                        <div
                          class="relative w-10 h-10 bg-white rounded-full border-2 border-green-500 flex items-center justify-center shadow-lg"
                        >
                          <span class="text-xs font-black text-green-600"
                            >ゼロ</span
                          >
                        </div>
                      </div>
                      <span
                        class="ml-3 font-bold text-green-600"
                        id="tapforge-env-impact">{translations.costComparison?.tapforge?.envImpact || ''}</span
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="text-center mt-12">
          <div
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full shadow-lg"
          >
            <span class="text-lg font-bold text-white" id="target-audience">
  {translations.costComparison?.targetAudience || ''}
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

